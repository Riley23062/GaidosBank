<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="/bootstrap">
   <style>
      a:link {
         color: rgb(0, 150, 0);
         text-decoration: none;
      }

      a:visited {
         color: rgb(0, 150, 0);
         text-decoration: none;
      }

      a:hover {
         color: rgb(0, 100, 0);
         text-decoration: none;
         font: bold;
      }

      a:active {
         color: rgb(0, 100, 0);
         text-decoration: none;
      }
   </style>
   <title>Home</title>
</head>

<body>
   <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
      <div class="container-fluid">
         <div class="d-flex float-start">
            <a class='navbar-brand' href="/">
               <p class="fs-1 fw-bold">&#128176; Bank of Gaidos</p>
            </a>
            <a class="translate-middle-y" href="/makeTransaction" style="margin-bottom: 0%; margin-top: 9%;">
               <button type="button" class="btn btn-primary">Make Transaction</button>
            </a>
            <a class="translate-middle-y" href="/viewTransactions" style="margin-bottom: 0%; margin-top: 9%;">
               <button type="button" class="btn btn-primary">View Transactions</button>
            </a>
            <a class="translate-middle-y" href="/debug" style="margin-bottom: 0%; margin-top: 9%;">
               <button type="button" class="btn btn-primary">Debug</button>
            </a>
         </div>
         <a href="/"></a>
         <div class="float-end">
            <a href="/changePassword">
               <button type="button" class="btn btn-primary">Change Password</button>
            </a>
            <a href="/login">
               <button type="button" class="btn btn-primary">Login</button>
            </a>
            <a href="/signup">
               <button type="button" class="btn btn-primary">Signup</button>
            </a>
            <a href="/logout">
               <button type="button" class="btn btn-primary">Logout</button>
            </a>
         </div>
      </div>
   </nav>
   <div class="justify-content-center text-center" style="width: 80%; margin-left: 10%; margin-bottom: 0px">
      <p class='fs-3 fw-bold'>Welcome back, <%=user.username%>!<br>You have $<%=JSON.stringify(user.balance)%> in your
               Balance</p>
      <br>
      <p style="background-color:rgb(255,215,0); padding: 0.5%;border-style: solid; border-color:rgb(0,0,0); border-width: 2%;border-radius: 50px; width:20%; margin-left:40%;"
         class='fs-4 fw-bold'>Leader Board</p>
      <table class="table table-striped table-hover">
         <thead class='fs-5 fw-bold'>
            <tr>
               <th scope="col">Rank</th>
               <th scope="col">Username</th>
               <th scope="col">Balance</th>
            </tr>
         </thead>
         <tbody class='fw-semibold'>
            <%for (user in leaderBoard) {%>
               <%if (user==0) {%>
                  <tr style="background-color:rgb(255,215,0);">
                     <td>#<%=Number(user)+1%>
                     </td>
                     <td>
                        <%=JSON.stringify(leaderBoard[user].username)%>
                     </td>
                     <td>
                        <%=JSON.stringify(leaderBoard[user].balance)%>
                     </td>
                  </tr>
                  <%} else if (user==1) {%>
                     <tr style="background-color:rgb(192,192,192);">
                        <td>#<%=Number(user)+1%>
                        </td>
                        <td>
                           <%=JSON.stringify(leaderBoard[user].username)%>
                        </td>
                        <td>
                           <%=JSON.stringify(leaderBoard[user].balance)%>
                        </td>
                     </tr>
                     <%} else if (user==2) {%>
                        <tr style="background-color:rgb(205, 127, 50);">
                           <td>#<%=Number(user)+1%>
                           </td>
                           <td>
                              <%=JSON.stringify(leaderBoard[user].username)%>
                           </td>
                           <td>
                              <%=JSON.stringify(leaderBoard[user].balance)%>
                           </td>
                        </tr>
                        <%} else {%>
                           <tr>
                              <td>#<%=Number(user)+1%>
                              </td>
                              <td>
                                 <%=JSON.stringify(leaderBoard[user].username)%>
                              </td>
                              <td>
                                 <%=JSON.stringify(leaderBoard[user].balance)%>
                              </td>
                           </tr>
                           <%}%>
                              <%}%>
         </tbody>
      </table>
   </div>

</html>